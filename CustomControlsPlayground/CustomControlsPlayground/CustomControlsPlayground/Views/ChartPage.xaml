<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:chart="clr-namespace:CustomControlsPlayground.Controls.Chart"
             xmlns:viewModels="clr-namespace:CustomControlsPlayground.ViewModels"
             x:Class="CustomControlsPlayground.Views.ChartPage"
             Title="{Binding Title}"
             x:DataType="viewModels:ChartViewModel">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <chart:Chart WidthRequest="300" HeightRequest="300" DataSet="{Binding DataSet}" ChartColor="Aqua" ChartType="Linear"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>