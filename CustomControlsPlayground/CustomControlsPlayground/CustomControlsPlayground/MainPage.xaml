<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:chart="clr-namespace:CustomControlsPlayground.Controls.Chart"
             xmlns:viewModels="clr-namespace:CustomControlsPlayground.ViewModels"
             x:Class="CustomControlsPlayground.MainPage"
             Title="{Binding Title}"
             x:DataType="viewModels:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button Text="Chart control" Command="{Binding NavigateToChartPage}"/>
            <Button Text="Gauge chart" Command="{Binding NavigateToGaugeChartPage}"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
